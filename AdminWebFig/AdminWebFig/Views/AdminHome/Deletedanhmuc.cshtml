@model AdminWebFig.Models.Category
@Styles.Render("~/Content/css")
@{
    ViewBag.Title = "Deletedanhmuc";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
 @if (@ViewBag.thongbao != null)
 {
<script>
    alert(@ViewBag.thongbao)
</script>
 }

<div class="container">
    <h2>Deletedanhmuc</h2>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Category</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Loại:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.tenCategory)
            </dd>

            <dt>
                Hình:
            </dt>
            <dd>
                <img src="@Model.hinhCategory" id="pictureUpload" width="180px" />
            </dd>



            <dt>
                Mô tả:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.motaCategory)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" /> |
                @Html.ActionLink("Back to List", "Indexdanhmuc")
            </div>
        }
    </div>
</div>


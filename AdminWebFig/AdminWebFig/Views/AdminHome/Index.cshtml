@model IEnumerable<AdminWebFig.Models.Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

</header>



<div class="slider">
    <div class="container">
        <div id="carouselExampleDark" class="carousel carousel-light slide" data-bs-ride="carousel">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="0" class="active" aria-current="true"></button>
                <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="1"></button>
                <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="2"></button>
            </div>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/Content/img/slide__1.jpg" class="d-block w-100">
                    <div class="carousel-caption d-none d-md-block">
                        <h1 class="carousel-header">First slide label</h1>
                        <h4 class="carousel-description">Some representative placeholder content for the first slide.</h4>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="~/Content/img/slide__3.jpg" class="d-block w-100">
                    <div class="carousel-caption d-none d-md-block">
                        <h1 class="carousel-header">Second slide label</h1>
                        <h4 class="carousel-description">Some representative placeholder content for the second slide.</h4>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="https://www.mypage.vn/wp-content/themes/mypage/images/web-doanh-nghiep.png" class="d-block w-100">
                    <div class="carousel-caption d-none d-md-block">
                        <h1 class="carousel-header">Third slide label</h1>
                        <h4 class="carousel-description">Some representative placeholder content for the third slide.</h4>
                    </div>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
</div>


<div class="product">
    <!-- New Product  -->
    <div class="product-special" style="width: 100%;">
        <ul class="category-list category-list-accessory">
            <li class="category-item category-item--active">
                <a href="" class="category-item-accessory">Sản phẩm mới</a>
            </li>
        </ul>
    </div>

    <!-- New Product Item-->
    <div class="product-item">
        <div class="container">
            <div class="btn btn-danger btn-add">
                @Html.ActionLink("Thêm sản phẩm ", "Create", new { @class = "btn btn-view-all btn-primary" })
            </div>
            <div class="btn btn-danger btn-add">
                @Html.ActionLink("Thêm tài khoản", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })
            </div>
            <div class="home-product">
                <div class="row">
                    @foreach (var item in Model)

                    {
                        <div class="col-lg-3 col-md-3 col-sm-6 col-6">
                            <a href="@Url.Action("Detail",new { idProduct = item.idProduct})" class="home-product-item">
                                <div class="home-product-item__img" style="background-image: url(@item.hinh);"></div>
                                <h4 class="home-product-item__name">@item.ten</h4>
                                <div class="home-product-item__price">@String.Format("{0:0,0}", item.gia)  <sup>đ</sup></div>
                                @*<button class="btn home-product-item__add">Thêm vào giỏ hàng </button>*@
                                @*@Html.ActionLink("Xoá", "Delete", new { idProduct = item.idProduct }, new { @class = "btn btn-view-all" })*@
                                @Html.ActionLink("Chỉnh sửa", "Edit", new { idProduct = item.idProduct }, new { @class = "btn btn-view-all" })

                            </a>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>

</div>
<style>
    .home-product-item__img {
        padding-top: 100%;
        background-position: center;
        background-size: contain;
        background-repeat: no-repeat;
        /* Ảnh zoom chậm lại */
        transition: 0.4s;
        will-change: transition;
        margin-top: 40px
    }
    .btn-view-all {
        width: 156px;
        height: 38px;
        font-weight: 500;
        font-size: 1.6rem;
        line-height: 32px;
        color: #7d7d7d;
        border: 2px solid #7d7d7d;
        background-color: var(--white-color);
        transition: 0.2s;
    }

    .footer {
        background-color: #171717;
    }


        .check-in a {
            color: #fff;
            font-weight: 600;
            font-size: 16px;
            text-decoration: none;
            text-transform: uppercase;
        }

    .btn-add a {
        color: #fff;
        font-weight: 600;
        font-size: 16px;
        text-decoration: none;
    }

    .btn-add {
        width: 150px;
        height: 40px;
        line-height: 38px;
    }

    .home-product-item {
        height: 400px;
    }
    
</style>



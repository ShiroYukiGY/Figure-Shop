                    <button class="btn btn-register">ĐĂNG KÝ</button>
                </div>
                <div class="line">
                    <p class="line-text">HOẶC</p>
                </div>

                <div class="auth-form__socials">
                    <a href="" class="auth-form__socials--facebook btn--width-icon">
                        <i class="fab fa-facebook-f"></i>
                        <span class="auth-form__socials-title">Facebook</span>
                    </a>
                    <a href="" class="auth-form__socials--google btn--width-icon">
                        <i class="fab fa-google"></i>
                        <span class="auth-form__socials-title">Google</span>
                    </a>
                </div>
            </div>

            <!-- Login Form -->

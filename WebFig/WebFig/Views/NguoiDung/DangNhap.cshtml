@model  WebFig.Models.Account
<link rel="stylesheet" href="~/Content/base.css">
<link rel="stylesheet" href="~/Content/login.css">
<link rel="stylesheet" href="~/Content/responsive.css">
@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="form">
    <div class="container">
        <div class="row">
            <div class="login-item col-lg-6 col-md-12 col-sm-12 col-12 hide-on-mobile-ipad">
                <img width="650px" src="https://vietucnews.net/wp-content/uploads/2017/11/Warning.png" alt="" class="login-img">
            </div>
            <div class="form-login col-lg-6 col-md-12 col-sm-12 col-12">
                <div class="auth-form">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            <div class="auth-form__header">
                                <h3 class="auth-form__heading">Đăng Nhập</h3>
                            </div>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="auth-form__group">
                                @Html.LabelFor(model => model.username, "Tên đăng nhập", htmlAttributes: new { @class = "auth-form__title" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "auth-form__input", placeholder = "Tên đăng nhập" } })
                                    @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                                    <div class="auth-form__controls">
                                        <div class="col-md-offset-2 col-md-10">
                                            <a style="color:red">
                                                @ViewData["Loi1"]
                                                @ViewBag.ThongBao   
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="auth-form__group">
                                @Html.LabelFor(model => model.password, "Mật khẩu", htmlAttributes: new { @class = "auth-form__title" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "auth-form__input", placeholder = "Mật khẩu" } })
                                    @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                                    <input type="button" id="showHidePassword" value="Show" />                
                                    <a style="padding-left:320px" href="@Url.Action("NhapTaiKhoan")">Quên mật khẩu</a>
                                    <div class="auth-form__controls">
                                        <div class="col-md-offset-2 col-md-10">
                                            <a style="color:red">
                                                @ViewData["Loi2"]
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="auth-form__controls">
                                <div class="col-md-offset-2 col-md-10">
                                    <a style="color:red">
                                        @ViewData["Loi3"]
                                    </a>
                                </div>
                            </div>
                            <div class="auth-form__controls">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Đăng  Nhập" class="btn btn-check-in" />
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
